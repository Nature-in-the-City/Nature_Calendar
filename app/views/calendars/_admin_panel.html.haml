-# in app/views/calendars/_admin_panel.html.haml, rendered from _calendar.html.haml

%br
%br
- if @event_relations[tab].count > 0
  - @event_relations[tab].each do |event|
    .container{ id: "#{event.id}_title" }
      .col-sm-8
        %h3= "#{event.name}"
      .col-sm-4
        %a{ id: "showbtn_#{event.id}", class: "", href: "##{event.id}_details", data: { toggle: "collapse" } }
          Show More
          %i.fa.fa-angle-down
    
    .container{ id: "#{event.id}_details", class: "collapse" }
      #top{ class: "row" }
        #date.col-sm-2
          Date
          .container
            = event.event_date_time.day_only
        #cost.col-sm-2
          Cost
          .container= "$#{event.cost}"
        #tags.col-sm-3.container
          Tags
          .containers
            %p="#{Tag.format_valid_tags(event.tag)}"
        #contact_1.col-sm-3.container
          Contact Info
          .container="Name: #{event.contact.format_name}"
          .container= "Phone: #{event.contact.phone}"

      #bottom{ class: "row container" }
        #time{ id: "_Time", class: "container col-sm-2" }
          Time
          .container
            #start="Start: #{event.event_date_time.start_time}"
            #end= "End: #{event.event_date_time.end_time}"
        #location.col-sm-2.container{ id: "_Location" }
          Location
          .container
            #street= "#{event.address.street_address}"
            #city= "#{event.address.city_state_zip}"
        #description.col-sm-3.container{ id: "_Description" }
          Description
          .container-fluid
            %p=event.description
        #contact_2.col-sm-3.container{ id: "val_Email" }
          .container
            #email= "Email: #{event.contact.email}"
            #org= "Org: #{event.organization}"
          - if !tab.eql? "Past" 
            .container.col-sm-4
              = form_tag  do
                -# this will call editing
                - if tab.eql? "Upcoming"
                  = submit_tag 'accept', disabled: 'true', class: [ 'disabled' ]
                - else
                  = submit_tag 'accept'
            .container.col-sm-4
              = form_tag  do
                -# this will call editing
                = submit_tag 'edit'
            - if tab.eql? "Rejected"
              .container.col-sm-4
                = form_tag do
                  -# this will permanently delete an event
                  = submit_tag 'delete'
            - else
              .container.col-sm-4
                = form_tag do
                  -# this will move an event to the rejected area
                  = submit_tag 'reject'
    %br
- else
  %ul
    %li= "There are no #{tab} events"