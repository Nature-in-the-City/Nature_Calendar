#admin
  - if user_signed_in?
    %div{ class: 'container' }
      %br
      %h2
        %strong Events
      %br
    #upcoming.container
      %ul.nav.nav-tabs.containter.clearfix
        - @tabs.each do |tab|
          - if tab.eql? "Upcoming"
            %li{class: 'active', id: "#{tab}"}
              %a{ href: "##{tab.downcase}_events", 'data-toggle' => 'tab' } #{tab}
          - else
            %li{id: "#{tab}"}
              - if tab.eql? "Pending"
                %a{ :href =>"#pending_events", 'data-toggle' => 'tab' } Pending (#{@pending_count})
              - else
                %li{id: "#{tab}"}
                  - if tab.eql? "Pending"
                    %a{ :href =>"#pending_events", 'data-toggle' => 'tab' } Pending (#{@pending_count})
                  - else
                    %a{ :href =>"##{tab.downcase}_events", 'data-toggle' => 'tab' } #{tab}
      
        %div.tab-content.clearfix.container
          %br
          - @tabs.each do |tab|
            - if tab.eql? "Upcoming"
              %div{ class: 'tab-pane active scrollable container-fluid', id: "#{tab.downcase}_events" }
                = render partial: 'admin_panel', locals: { tab: tab, tags: @tags }
            - else
              %div{ class: 'tab-pane scrollable container-fluid', id: "#{tab.downcase}_events" }
                = render partial: 'admin_panel', locals: { tab: tab, tags: @tags }
          %br
%br

#sync
  - if user_signed_in?
    %h2
      %strong Sync Status
    .container.row
      #status.container.col-sm-1
        .button_right
          Sync
          %i.fa.fa-refresh
      #status.container.col-sm-4
        .button_left
          Delete
          %i.fa.fa-trash-o
      #status.container.col-sm-8
        = render partial: 'sync_panel'
      #add_cal.container.col-sm-4
